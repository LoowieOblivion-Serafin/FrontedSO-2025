<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.layout.BorderPane?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.uni.pe.monitorprocesoslinux.MonitorController"
            prefHeight="600.0" prefWidth="800.0">
    <center>
        <TableView fx:id="tablaProcesos" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="columnaPID" prefWidth="75.0" text="PID"/>
                <TableColumn fx:id="columnaNombre" prefWidth="250.0" text="Nombre"/>
                <TableColumn fx:id="columnaUsuario" prefWidth="120.0" text="Usuario"/>
                <TableColumn fx:id="columnaEstado" prefWidth="100.0" text="Estado"/>
                <TableColumn fx:id="columnaCPU" prefWidth="100.0" text=" CPU (%)"/>
                <TableColumn fx:id="columnaMemoria" prefWidth="120.0" text="Memoria (%)"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <children>
                <Button text="Finalizar Proceso"/>
                <Label fx:id="etiquetaEstado" text="Procesos: 0"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>